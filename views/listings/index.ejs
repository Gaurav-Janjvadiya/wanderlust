<% layout("/layouts/boilerplate") %>
<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
  }
  .filter {
    cursor: pointer;
    text-align: center;
    margin-right: 2rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    opacity: 0.8;
  }
  .filter:hover,
  .filter:active {
    opacity: 1;
  }
  .filter p {
    font-size: 0.8rem;
  }
  .text-info {
    display: none;
  }
  .text-toggle {
    border: 1px solid gray;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 2rem;
    height: 4rem;
    margin-left: 6rem;
  }
</style>

<body>
  <div class="container">
    <div class="row" id="filters">
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-fire"></i> Trending
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-bed"></i> Rooms
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-mountain-city"></i> Iconic Cities
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-mountain"></i> Mountains
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-brands fa-fort-awesome"></i> Castles
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-person-swimming"></i> Amazing pools
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-campground"></i> Camping
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-solid fa-cow"></i> Farms
      </div>
      <div class="col-lg-2 col-md-3 col-sm-4 col-6 filter">
        <i class="fa-regular fa-snowflake"></i> Arctic
      </div>
      <div class="col-12 text-toggle">
        <div class="form-check form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="flexSwitchCheckDefault"
          />
          <label class="form-check-label" for="flexSwitchCheckDefault"
            >Display total after taxes</label
          >
        </div>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% allListings.forEach(Listing=> { %>
    <a href="/listings/<%=Listing._id %>">
      <div class="card col">
        <img
          src="<%=Listing.image.url%>"
          class="card-img-top"
          style="height: 20rem"
          alt="listing_image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%= Listing.title %></h5>
          <p class="card-text">
            &#8377;<%=Listing.price.toLocaleString("en-IN")%>/night
            <i class="text-info">&nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <% }) %>
  </div>
</body>
<script>
  const taxSwitch = document.querySelector("#flexSwitchCheckDefault");
  taxSwitch.addEventListener("click", (e) => {
    let taxInfo = document.getElementsByClassName("text-info");
    for (info of taxInfo) {
      info.style.display = info.style.display === "inline" ? "none" : "inline";
    }
  });
</script>
