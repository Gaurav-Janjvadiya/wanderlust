<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-6">
            <h1 class="mb-4">Login</h1>
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div>
                    <label class="form-label" for="username">Username</label>
                    <input required type="text" id="username" name="username" placeholder="add your username"
                        class="form-control">
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Looks empty!</div>
                </div>
                <br>
                <div>
                    <label class="form-label" for="password">Password</label>
                    <input required type="password" id="password" name="password" placeholder="add a strong password"
                        class="form-control">
                    <div class="invalid-feedback">Looks empty!</div>
                </div>
                <br>
                <button class="btn btn-dark">
                    Login
                </button>
            </form>
        </div>
    </div>